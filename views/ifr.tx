<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html" charset="utf-8">
<link rel="shortcut icon" href="<: $c.req.uri_for('/favicon.ico') :>" type="image/vnd.microsoft.icon" />
<link rel="stylesheet" href="<: $c.req.uri_for('/css/bootstrap.min.css') :>">
<style type="text/css">
body {
     margin: 0px;
     padding: 0px;
}
</style>
<link rel="stylesheet" href="<: $c.req.uri_for('/css/site.css') :>">
<title>HRForecast</title>
</head>
<body>

: if $valid.valid('graphheader') != 0 {
    <h3 style="margin: 0px;padding: 8px 20px 7px;border-bottom: solid 1px #999;"><a href="<: $c.req.uri_for('/view/'~$metrics.service_name~'/'~$metrics.section_name~'/'~$metrics.graph_name,$metrics_params) :>" target="_blank"><: $metrics.graph_name :></a> <small><: $metrics.description :></small></h3>


    <div class="btn-toolbar" style="position:absolute;top:-2px;right:100px;padding-top:6px" role="toolbar">

    <div class="btn-group">
    <a class="btn btn-default btn-sm <: ($valid.valid('t') == 'w') ? 'active' : '' :>" href="<: $c.req.uri_for('/ifr/'~$metrics.service_name~'/'~$metrics.section_name~'/'~$metrics.graph_name,$merge_params({t=>'w'})) :>">1 weel</a>
    <a class="btn btn-default btn-sm <: ($valid.valid('t') == 'm') ? 'active' : '' :>" href="<: $c.req.uri_for('/ifr/'~$metrics.service_name~'/'~$metrics.section_name~'/'~$metrics.graph_name,$merge_params({t=>'m'})) :>">1 month</a>
    <a class="btn btn-default btn-sm <: ($valid.valid('t') == 'y') ? 'active' : '' :>" href="<: $c.req.uri_for('/ifr/'~$metrics.service_name~'/'~$metrics.section_name~'/'~$metrics.graph_name,$merge_params({t=>'y'})) :>">1 year</a>
    </div>

    <div class="btn-group">
    <a class="btn btn-default btn-sm" href="<: $c.req.uri_for('/csv/'~$metrics.service_name~'/'~$metrics.section_name~'/'~$metrics.graph_name,$merge_params({d=>1})) :>">EXPORT</a>
    <a class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
    <ul class="dropdown-menu">
    <li class="dropdown-header">CSV</li>
    <li><a href="<: $c.req.uri_for('/csv/'~$metrics.service_name~'/'~$metrics.section_name~'/'~$metrics.graph_name,$merge_params({t=>'w',d=>1})) :>">1 weel</a></li>
    <li><a href="<: $c.req.uri_for('/csv/'~$metrics.service_name~'/'~$metrics.section_name~'/'~$metrics.graph_name,$merge_params({t=>'m',d=>1})) :>">1 month</a></li>
    <li><a href="<: $c.req.uri_for('/csv/'~$metrics.service_name~'/'~$metrics.section_name~'/'~$metrics.graph_name,$merge_params({t=>'y',d=>1})) :>">1 year</a></li>
    <li class="divider"></li>
    <li class="dropdown-header">HTML</li>
    <li><a href="<: $c.req.uri_for('/table/'~$metrics.service_name~'/'~$metrics.section_name~'/'~$metrics.graph_name,$merge_params({t=>'w',d=>1})) :>" target="_blank">1 weel</a></li>
    <li><a href="<: $c.req.uri_for('/table/'~$metrics.service_name~'/'~$metrics.section_name~'/'~$metrics.graph_name,$merge_params({t=>'m',d=>1})) :>" target="_blank">1 month</a></li>
    <li><a href="<: $c.req.uri_for('/table/'~$metrics.service_name~'/'~$metrics.section_name~'/'~$metrics.graph_name,$merge_params({t=>'y',d=>1})) :>" target="_blank">1 year</a></li>
    </ul>
    </div><!-- /btn-group -->

    </div>
: }

<div id="graphdiv-0" data-index="0" class="metrics-graph" data-csv="<: $c.req.uri_for('/csv/'~$metrics.service_name~'/'~$metrics.section_name~'/'~$metrics.graph_name,$metrics_params) :>" data-datewindow="<: $date_window :>" data-colors="<: $metrics.colors :>" style="position:absolute;top:<: ($valid.valid('graphheader') == 0) ? '0px' : '45px' :>;bottom:5px;left:5px;right:<: ($valid.valid('graphlabel') == 0) ? '50px' : '200px' :>;"></div>

: if $valid.valid('graphlabel') != 0 {
    <div style="position:absolute;width:198px;right:0px;top:<: ($valid.valid('graphheader') == 0) ? '0px' : '45px' :>;word-wrap:break-word;">
    <span id="label-0">
    <a href="<: $c.req.uri_for('/view/'~$metrics.service_name~'/'~$metrics.section_name~'/'~$metrics.graph_name,$metrics_params) :>" style="color:<: $metrics.color :>" title="<: $metrics.description :>">
    <span style="font-weight:bold"><: '/'~$metrics.service_name~'/'~$metrics.section_name~'/'~$metrics.graph_name :></span>
    </a>
    </span>
    <span id="onmouse-0" style="display:none;"></span>
    <span id="total-0"></span>
    </div>
: }
<script type="text/javascript" src="<: $c.req.uri_for('/js/jquery-1.10.2.min.js') :>"></script>
<script type="text/javascript" src="<: $c.req.uri_for('/js/bootstrap.min.js') :>"></script>
<script type="text/javascript" src="<: $c.req.uri_for('/js/dygraph-combined.js') :>"></script>
<script type="text/javascript" src="<: $c.req.uri_for('/js/site.js') :>"></script>
<script type="text/javascript">
$(function(){
  $('div.metrics-graph').each(loadGraphs);
});
</script>
</body>
</html>
